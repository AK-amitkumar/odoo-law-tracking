<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_law_tracking_treatment_detail_filter" model="ir.ui.view">
            <field name="name">law_tracking.treatment_detail.select</field>
            <field name="model">law_tracking.treatment_detail</field>
            <field name="arch" type="xml">
                <search string="treatment_detail" version="7.0">
                    <group string="By Attribute">
                    </group>
                    <group string="By object">
                    <field name="order_paper_id" string="Order Paper"
                            />
                    <field name="commission_treatment_id" string="Commission treatment"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_law_tracking_treatment_detail_form" model="ir.ui.view">
            <field name="name">law_tracking.treatment_detail.form</field>
            <field name="model">law_tracking.treatment_detail</field>
            <field name="arch" type="xml">
                <form string="treatment_detail" version="7.0">
                    <header>
                    </header>
                    <sheet string="treatment_detail">
                     <group>
                        <field name="note"
                            />
                    <field name="order_paper_id"
                            />
                    <field name="commission_treatment_id"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_law_tracking_treatment_detail_tree" model="ir.ui.view">
            <field name="name">law_tracking.treatment_detail.tree</field>
            <field name="model">law_tracking.treatment_detail</field>
            <field name="arch" type="xml">
                <tree string="treatment_detail"
                    >
                    <field name="note"
                        />
                    <field name="order_paper_id"
                        />
                    <field name="commission_treatment_id"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
